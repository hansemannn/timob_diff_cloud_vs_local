{
	"name": "babel-plugin-transform-titanium",
	"version": "0.1.1",
	"description": "Replace known values in Titanium apps to allow for further simplification via dead code/evaluation in babel minify",
	"keywords": [
		"babel-plugin"
	],
	"author": "cwilliams",
	"main": "src/index.js",
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@seadub/danger-plugin-dependencies": "^0.1.0",
		"@seadub/danger-plugin-eslint": "^1.0.0",
		"@seadub/danger-plugin-junit": "0.1.1",
		"babel-plugin-tester": "^6.0.0",
		"danger": "^8.0.0",
		"eslint": "^5.11.1",
		"eslint-config-axway": "^4.2.1",
		"eslint-plugin-mocha": "^5.2.0",
		"husky": "^2.3.0",
		"lint-staged": "^8.1.0",
		"mocha": "^6.0.0",
		"mocha-jenkins-reporter": "^0.4.1",
		"nyc": "^14.0.0"
	},
	"scripts": {
		"lint": "eslint .",
		"test": "npm run lint && npm run unit-test",
		"unit-test": "JUNIT_REPORT_PATH=junit_report.xml nyc mocha tests/*_test.js --reporter=mocha-jenkins-reporter"
	},
	"mocha": {
		"timeout": 30000,
		"check-leaks": true
	},
	"nyc": {
		"check-coverage": true,
		"lines": 56,
		"statements": 55,
		"functions": 60,
		"branches": 40,
		"exclude": [
			"tests/**/*.js",
			"locales/**/*.js"
		],
		"reporter": [
			"cobertura",
			"text"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": "eslint"
	}
}
